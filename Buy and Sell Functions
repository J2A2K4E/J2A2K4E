function buy() returns (uint amount){ amount = msg.value / buyPrice; // calculates the amount if (balanceOf[this] < amount) throw; // checks if it has enough to sell balanceOf[msg.sender] += amount; // adds the amount to buyer's balance balanceOf[this] -= amount; // subtracts amount from seller's balance Transfer(this, msg.sender, amount); // execute an event reflecting the change return amount; // ends function and returns } function sell(uint amount) returns (uint revenue){ if (balanceOf[msg.sender] < amount ) throw; // checks if the sender has enough to sell balanceOf[this] += amount; // adds the amount to owner's balance balanceOf[msg.sender] -= amount; // subtracts the amount from seller's balance uint revenue = amount * sellPrice; if (!msg.sender.send(revenue)) { // sends ether to the seller: it's important throw; // to do this last to prevent recursion attacks } else { Transfer(msg.sender, this, amount); // executes an event reflecting on the change return revenue; // ends function and returns } }
